---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import {
  getCategories,
  getMonths,
  makeExcerpt,
  normalizeCategory,
  slugifyClass,
  sortPostsDesc,
  formatDate,
} from "../../../lib/blog.js";

export async function getStaticPaths() {
  const posts = await Astro.glob("../*.md");
  const months = getMonths(posts);

  return months.map((m) => ({
    params: { month: m },
  }));
}

const base = import.meta.env.BASE_URL;
const posts = sortPostsDesc(await Astro.glob("../*.md"));
const categories = getCategories(posts);
const months = getMonths(posts);

const month = String(Astro.params.month ?? "");
const filtered = posts.filter((p) => formatDate(p.frontmatter?.date).slice(0, 7) === month);
---

<BaseLayout title={`月別: ${month}`} description={`${month} の記事一覧`}>
  <h1>月別: {month}</h1>

  <!-- カテゴリナビ -->
  <p class="sub" aria-label="カテゴリ">
    <a href={`${base}blog/`}>all</a>
    {categories.map((c) => (
      <>
        <span class="sep" aria-hidden="true"> / </span>
        <a href={`${base}blog/category/${encodeURIComponent(c)}/`}>{c}</a>
      </>
    ))}
  </p>

  <!-- 月別ナビ -->
  <p class="sub" aria-label="月別">
    月別：
    {months.map((m, i) => (
      <>
        {i > 0 && <span class="sep" aria-hidden="true"> / </span>}
        <a class={m === month ? "is-active" : ""} href={`${base}blog/month/${m}/`}>
          {m}
        </a>
      </>
    ))}
  </p>

  {filtered.length === 0 ? (
    <p class="sub">この月の記事はまだありません。</p>
  ) : (
    <ul class="card-list">
      {await Promise.all(
        filtered.map(async (post) => {
          const excerpt = await makeExcerpt(post);
          const cats = normalizeCategory(post.frontmatter?.category);

          return (
            <li class="card">
              <a class="card-link" href={post.url}>
                <div class="card-head">
                  <p class="card-title">{post.frontmatter.title}</p>

                  <p class="card-meta">
                    <span class="card-date">{formatDate(post.frontmatter.date)}</span>
                    {cats.map((cat) => (
                      <span class={`badge badge-${slugifyClass(cat)}`}>{cat}</span>
                    ))}
                  </p>
                </div>

                {excerpt && <p class="card-excerpt">{excerpt}</p>}
              </a>
            </li>
          );
        })
      )}
    </ul>
  )}
</BaseLayout>
