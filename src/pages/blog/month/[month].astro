---
import BaseLayout from "../../../layouts/BaseLayout.astro";

/**
 * 日付フォーマット（YYYY-MM-DD）
 */
const formatDate = (d) =>
  new Date(d ?? Date.now()).toISOString().slice(0, 10);

/**
 * CSSクラス用にカテゴリ文字列を安全化
 * - 空白はハイフンへ
 * - 記号は除去
 * - 文字/数字/ハイフン（＋Unicode文字）だけ残す
 */
const slugifyClass = (input) => {
  const s = String(input ?? "").trim().toLowerCase();
  const out = s
    .replace(/\s+/g, "-")
    .replace(/[^\p{L}\p{N}-]/gu, "")
    .replace(/-+/g, "-")
    .replace(/^-|-$/g, "");
  return out || "uncategorized";
};

/**
 * ===== 静的パス生成 =====
 * blog/*.md の date から YYYY-MM を抽出
 */
export async function getStaticPaths() {
  const posts = await Astro.glob("../*.md");

  const months = [
    ...new Set(
      posts.map((p) =>
        new Date(p.frontmatter.date ?? Date.now())
          .toISOString()
          .slice(0, 7)
      )
    ),
  ];

  return months.map((month) => ({
    params: { month },
  }));
}

// ===== パラメータ取得 =====
const { month } = Astro.params;

// ===== ベースURL =====
const base = import.meta.env.BASE_URL;

// ===== 記事取得 =====
const posts = await Astro.glob("../*.md");

/**
 * ===== 月でフィルタ =====
 */
const filteredPosts = posts.filter((p) =>
  formatDate(p.frontmatter.date).startsWith(month)
);

/**
 * ===== 日付順にソート =====
 */
filteredPosts.sort((a, b) => {
  const da = new Date(a.frontmatter.date ?? 0);
  const db = new Date(b.frontmatter.date ?? 0);
  return db - da;
});

/**
 * 抜粋生成（一覧用）
 *
 * 優先順位:
 * 1. frontmatter.excerpt
 * 2. lead を飛ばした本文1行目
 */
const makeExcerpt = async (post) => {
  if (typeof post.frontmatter?.excerpt === "string") {
    return post.frontmatter.excerpt.trim();
  }

  if (typeof post.rawContent !== "function") return "";

  const raw = await post.rawContent();
  if (!raw) return "";

  // frontmatter 除去
  const body = raw.replace(/^---[\s\S]*?---\s*/m, "");

  // lead ブロックを丸ごと除去
  const withoutLead = body.replace(
    /<p\s+class=["']lead["']>[\s\S]*?<\/p>/gi,
    ""
  );

  const lines = withoutLead
    .split(/\r?\n/)
    .map((l) => l.trim())
    .filter(Boolean)
    .filter((l) => !l.startsWith("#"))
    .filter((l) => !l.includes('class="back"'));

  if (!lines.length) return "";

  return lines[0]
    .replace(/<[^>]+>/g, "")
    .replace(/!\[.*?\]\(.*?\)/g, "")
    .replace(/\[([^\]]+)\]\([^)]+\)/g, "$1")
    .replace(/[`*_>#-]/g, "")
    .replace(/\s+/g, " ")
    .trim();
};
---

<BaseLayout title={`Blog / ${month}`}>
  <h1>Blog</h1>

  <p class="sub">
    <a href={`${base}blog/`}>all</a>
    {" / "}
    <span class="is-active">{month}</span>
  </p>

  <ul class="card-list">
    {await Promise.all(
      filteredPosts.map(async (post) => {
        const excerpt = await makeExcerpt(post);

        const categoryLabel = String(post.frontmatter.category ?? "");
        const categoryClass = slugifyClass(categoryLabel);

        return (
          <li class="card">
            <a class="card-link" href={post.url}>
              <div class="card-head">
                <p class="card-title">{post.frontmatter.title}</p>

                <p class="card-meta">
                  <span
                    class={`badge ${
                      formatDate(post.frontmatter.date).startsWith(month)
                        ? "badge-month is-active"
                        : "badge-month"
                    }`}
                  >
                    {month}
                  </span>

                  {categoryLabel && (
                    <span class={`badge badge-${categoryClass}`}>
                      {categoryLabel}
                    </span>
                  )}
                </p>
              </div>

              {excerpt && <p class="card-excerpt">{excerpt}</p>}
            </a>
          </li>
        );
      })
    )}
  </ul>

  <p><a href={`${base}blog/`}>← all</a></p>
  <p><a href={base}>← Home</a></p>
</BaseLayout>
